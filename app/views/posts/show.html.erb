Title:

<%= @post.title %>

Content:

<%= @post.content %>

Categories:
<ul> <% @post.categories.each do |category| %>
<li> <%= category.name %></li>
<% end %>
</ul>

Comments:
<ul> <% @post.comments.each do |comment| %>
<li> <%=comment.user.username%> says: <%= comment.content %> </li>
<% end %>
</ul>

User Comments:
<ul>  <% @post.users.distinct.each do |user| %>
<li>  <%= link_to user.username, user_path(user)%> </li>
      <%end%>
</ul>

Comment:
<%= form_for @post do |f| %>
  <%= f.text_area :content %>
  <p>
    <%= f.collection_select :user_id, User.all, :id, :username, include_blank: "New User" %>
  </p>

  <%= f.fields_for :user, User.new do |user_fields| %>
    <%= user_fields.text_field :username %>
  <% end %>

  <p>
    <%= f.label :content, "New Comment" %><br>
    <%= f.text_area :content %>
  </p>
  <br/>
  <%= f.submit %>
<% end %>
