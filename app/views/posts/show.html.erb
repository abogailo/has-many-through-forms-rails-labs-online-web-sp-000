Title:

<%= @post.title %>

Content:

<%= @post.content %>

Categories:
<ul> <% @post.categories.each do |category| %>
<li> <%= category.name %></li>
<% end %>
</ul>

Comments:
<ul> <% @post.comments.each do |comment| %>
<li> <%=comment.user.username%> says: <%= comment.content %> </li>
<% end %>
</ul>

User Comments:
<ul>  <% @post.users.distinct.each do |user| %>
<li>  <%= link_to user.username, user_path(user)%> </li>
      <%end%>
</ul>

<h3>Comment:</h3>
<%= form_for @post do |f| %>
  <div>
    <%= f.label "Content" %>
    <%= f.text_area :content %>
  </div>

  <div>
    <%= f.label "User" %>
    <%= f.collection_check_boxes :user_ids, User.all, :id, :username %>
      <%= f.fields_for :users do |users_fields| %>
        <%= users_fields.text_field :username %>
      <% end %>
  </div>

  <%= f.submit %>
<% end %>
