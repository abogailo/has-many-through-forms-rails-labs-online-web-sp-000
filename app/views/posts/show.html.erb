Title:

<%= @post.title %>

Content:

<%= @post.content %>

Categories:
<ul> <% @post.categories.each do |category| %>
<li> <%= category.name %></li>
<% end %>
</ul>

Comments:
<ul> <% @post.comments.each do |comment| %>
<li> <%=comment.user.username%> says: <%= comment.content %> </li>
<% end %>
</ul>

User Comments:
<ul>  <% @post.users.distinct.each do |user| %>
<li>  <%= link_to user.username, user_path(user)%> </li>
      <%end%>
</ul>

<h3>Comment:</h3>
<%= form_for @comment do |f| %> <br>
  Select User:
  <br><%= f.collection_select(:user_id, User.all, :id, :username, include_blank: 'New User') %> <br>
  Create New User: <br>
  <%= f.fields_for :user, @comment.build_user do |user_fields| %>
    <%= user_fields.text_field :username %> <br>
  <% end %>
  <h3 style="margin-bottom: 0">Comment: </h3>
   <%= f.text_area :content %> <br>
  <%= f.hidden_field :post_id, :value => @post.id %> 

  <%= f.submit %>
<% end %>
